<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <style id="main">
        <attributes
        visibleToMouse="true"
        font="Interface/Fonts/Forte.fnt"
        align="center"
        height="90px"
        width="350px"/>
    </style>

    <screen id="multi" controller="GameLogicLayer.AppStates.MenuAppState">
        <layer id="background" backgroundImage="Interface/MainScreen.jpg" childLayout="center">
        </layer>
        <layer id="menu_layer" childLayout="center" >
            <panel childLayout="vertical" visibleToMouse="true" >
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true" />
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true" />
                </effect>
                <control id="1_player" name ="label"  style="main" text="1 PLAYER">
                    <interact onClick="loadGame(1)" />
                </control>
                <control id="2_player" name ="label"  style="main" text="2 PLAYER">
                    <interact onClick="loadGame(2)" />
                </control>
                <control id="3_player" name ="label"  style="main" text="3 PLAYER">
                    <interact onClick="loadGame(3)" />
                </control>
                <control id="4_player" name ="label"  style="main" text="4 PLAYER">
                    <interact onClick="loadGame(4)" />
                </control>
                <control id="back" name ="label"  style="main" text="BACK">
                    <interact onClick="goToGameMenu()" />
                </control>
            </panel>
        </layer>
    </screen>
</nifty>